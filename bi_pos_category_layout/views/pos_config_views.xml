<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_config_inherited_category_layout" model="ir.ui.view">
            <field name="name">pos.config.inherited.category.layou</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='pos_interface_section']" position="after">
                    <h2 name="pos_interface">POS Category Layout Settings</h2>
                    <div class="row mt16 o_settings_container" id="pos_categ_layout">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                POS Category Layout View
                                <div>
                                    <field name="custom_layout" widget="radio"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
